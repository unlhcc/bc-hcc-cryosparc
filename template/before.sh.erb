<%-
    cs_version = context.cryosparc_version.blank? ? 1 : context.cryosparc_version.to_s.tr('.', '')
%>

# Export the module function if it exists
[[ $(type -t module) == "function" ]] && export -f module

# Set db port based on CS version and UID
export cs_version="<%= cs_version %>"
#export cs_port=$(find_port ${host})
export cs_port=$((20000 + UID + cs_version))

# Define a password and export it for CS authentication
#cs_password="$(create_passwd 16)"
export CS_PASSWORD="${cryosparc_user_password}"
